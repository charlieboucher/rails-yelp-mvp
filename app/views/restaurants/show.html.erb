<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>

  <% @restaurant.reviews.each do |review| %>
  <p><%= "#{review.rating}/5  --   #{review.content}" %></p>
  <!-- <p><%= review.rating %></p> -->
  <% end %>
  <br>
  <%= link_to "Add your review", new_restaurant_review_path(@restaurant), {:class => "btn-primary btn"} %>
  <%= link_to "All restaurants", restaurants_path, {:class => "btn-success btn"} %>
</div>


